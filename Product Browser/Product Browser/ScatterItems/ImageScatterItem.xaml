<controls:ScatterViewItem x:Class="Product_Browser.ScatterItems.ImageScatterItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="http://schemas.microsoft.com/surface/2008"
             xmlns:local="clr-namespace:Product_Browser.ScatterItems"
             mc:Ignorable="d" Height="100" Width="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>

        </Grid.ColumnDefinitions>
        <Image x:Name="mainImage" HorizontalAlignment="Left" VerticalAlignment="Top" Stretch="Fill" Grid.Row="0"/>
        <controls:LibraryContainer HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="1" MinHeight="0" MinWidth="">
        </controls:LibraryContainer>


    </Grid>
</controls:ScatterViewItem>
