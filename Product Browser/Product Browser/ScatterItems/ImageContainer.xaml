<UserControl x:Class="Product_Browser.ScatterItems.ImageContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Product_Browser.ScatterItems"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="400" VerticalAlignment="Center" HorizontalAlignment="Center">
    <ScrollViewer Name="scrollBar" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden">
        <StackPanel Name="stackPanel" ScrollViewer.HorizontalScrollBarVisibility="Visible" Orientation="Horizontal"
                    VirtualizingStackPanel.VirtualizationMode="Recycling">

        </StackPanel>
    </ScrollViewer>
</UserControl>
