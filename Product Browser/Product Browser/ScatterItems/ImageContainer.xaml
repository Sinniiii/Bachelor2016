<UserControl x:Class="Product_Browser.ScatterItems.ImageContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Product_Browser.ScatterItems"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="0.2*"/>
        </Grid.ColumnDefinitions>

        <Image Name="image0" Stretch="Fill" Grid.Column="0" Margin="10, 10, 10, 10"/>
        <Image Name="image1" Stretch="Fill" Grid.Column="1" Margin="10, 10, 10, 10"/>
        <Image Name="image2" Stretch="Fill" Grid.Column="2" Margin="10, 10, 10, 10"/>
        <Image Name="image3" Stretch="Fill" Grid.Column="3" Margin="10, 10, 10, 10"/>
        <Image Name="image4" Stretch="Fill" Grid.Column="4" Margin="10, 10, 10, 10"/>

    </Grid>
</UserControl>
