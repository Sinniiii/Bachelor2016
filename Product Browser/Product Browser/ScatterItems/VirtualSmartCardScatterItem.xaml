<local:ABBScatterItem x:Class="Product_Browser.ScatterItems.VirtualSmartCardScatterItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Product_Browser.ScatterItems"
        xmlns:controls="http://schemas.microsoft.com/surface/2008"
        mc:Ignorable="d" Background="{x:Null}" CanScale="False" ShowsActivationEffects="False" IsTopmostOnActivation="False" MinWidth="0" MinHeight="0">

    <controls:ScatterViewItem.Resources>
        <Image x:Key="gradientEffect1" Source="/Resources/radial_gradient_blue.png" />
        <Image x:Key="gradientEffect2" Source="/Resources/radial_gradient_red.png" />
    </controls:ScatterViewItem.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="17"/>
            <RowDefinition Height="125"/>
            <RowDefinition Height="17"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="28"/>
            <ColumnDefinition Width="22"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="22"/>
            <ColumnDefinition Width="28"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <UserControl Name="animationPulse1" Content="{StaticResource gradientEffect1}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="7" Grid.RowSpan="5" IsHitTestVisible="False"/>
        <UserControl Name="animationPulse2" Content="{StaticResource gradientEffect2}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="7" Grid.RowSpan="5" IsHitTestVisible="False"/>

        <UserControl Name="centerObject" Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="3" BorderThickness="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="#4C000000">
            <UserControl.BorderBrush>
                <LinearGradientBrush StartPoint="0.0, 0" EndPoint="1, 1" MappingMode="RelativeToBoundingBox">
                    <LinearGradientBrush.RelativeTransform>
                        <TransformGroup>
                            <RotateTransform x:Name="grad" CenterY="0.5" CenterX="0.5"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </LinearGradientBrush.RelativeTransform>
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FF6C0000" Offset="0.25"/>
                    <GradientStop Color="Black" Offset="0.5" />
                    <GradientStop Color="#FF6C0000" Offset="0.75"/>
                    <GradientStop Color="Black" Offset="1" />
                </LinearGradientBrush>
            </UserControl.BorderBrush>
        </UserControl>

        <UserControl Name="imagePlaceholder" Visibility="Hidden" Grid.Column="6" Grid.Row="2" BorderBrush="Gray" BorderThickness="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="Transparent"/>
        <UserControl Name="videoPlaceholder" Visibility="Hidden" Grid.Column="0" Grid.Row="2" BorderBrush="Gray" BorderThickness="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="Transparent"/>
        <UserControl Name="documentPlaceholder" Visibility="Hidden" Grid.Column="3" Grid.Row="0" BorderBrush="Gray" BorderThickness="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="Transparent"/>

        <ContentControl Name="loadingControl"
                        Visibility="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type controls:ScatterViewItem}}, Path=LoadingSmartCard, Converter={StaticResource BoolToVisCon}, FallbackValue=Visible}"
                        Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="3">

            <controls:SurfaceTextBox Background="Transparent" BorderThickness="0" x:Name="loadingText" Text="Loading Smart Card" HorizontalAlignment="Center" VerticalAlignment="Center" IsManipulationEnabled="True" AllowDrop="False" Focusable="False" IsHitTestVisible="False" IsTabStop="False" />
        </ContentControl>

        <ContentControl Name="notFoundControl"
                        Visibility="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type controls:ScatterViewItem}}, Path=NotFoundSmartCard, Converter={StaticResource BoolToVisCon}, FallbackValue=Hidden}"
                        Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="3">

            <controls:SurfaceTextBox Background="Transparent" BorderThickness="0" x:Name="notFoundText" Text="Empty SmartCard" HorizontalAlignment="Center" VerticalAlignment="Center" AllowDrop="False" Focusable="False" IsHitTestVisible="False" IsTabStop="False" />
        </ContentControl>

        <ContentControl Name="foundControl"
                        Visibility="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type controls:ScatterViewItem}}, Path=FoundSmartCard, Converter={StaticResource BoolToVisCon}, FallbackValue=Hidden}"
                        Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="3">

            <controls:SurfaceTextBox Background="Transparent" BorderThickness="0" x:Name="FoundText" HorizontalAlignment="Center" VerticalAlignment="Center"
                                     Text="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type controls:ScatterViewItem}}, Path=SmartCardName}" AllowDrop="False" Focusable="False" IsHitTestVisible="False" IsTabStop="False"/>
        </ContentControl>

    </Grid>

</local:ABBScatterItem>
