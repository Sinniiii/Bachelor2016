<s:SurfaceWindow x:Class="Product_Browser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:s="http://schemas.microsoft.com/surface/2008"
        xmlns:local="clr-namespace:Product_Browser"
        Title="MainWindow" Height="700" Width="1200">
    <Grid>
        <s:TagVisualizer Name="tagVisualizer" HorizontalAlignment="Left" VerticalAlignment="Top" Width="1000" Height="600"/>
        <s:ScatterView Name="scatterView" HorizontalAlignment="Left" VerticalAlignment="Top" Width="1000" Height="600"/>
        <s:SurfaceButton x:Name="surfaceButton" Content="Create Image" HorizontalAlignment="Left" Margin="160,34,0,0" VerticalAlignment="Top" Click="SurfaceButton_Click"/>

    </Grid>
</s:SurfaceWindow>
