<s:ScatterViewItem x:Class="TagExpansionPrototype.CombinedTagScatterItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:s="http://schemas.microsoft.com/surface/2008"
             xmlns:local="clr-namespace:TagExpansionPrototype"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Label Content="{Binding Path=TotalTagValue, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=s:ScatterViewItem}}"/>
    </Grid>
</s:ScatterViewItem>
